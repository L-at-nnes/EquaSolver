{
  "name": "equasolver",
  "version": "1.0.0",
  "description": "A modern equation solver with an elegant UI",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "calculator",
    "equation-solver",
    "mathematics",
    "web-app"
  ],
  "author": "l-at-nnes",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/flags.js",
      "!src/js/translations.js"
    ],
    "testMatch": [
      "**/tests/unit/**/*.test.js"
    ]
  }
}
